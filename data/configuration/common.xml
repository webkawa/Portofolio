
<config>
    <display>
        <slides>
            <width>
                <left>10</left>
                <right>20</right>
            </width>
            <transition>
                <speed>1000</speed> 
                <ease>
                    <next>easeOutExpo</next>
                    <prev>easeInOutSine</prev>
                </ease>
            </transition>
        </slides>
        <page>
            <core>
                <transition>
                    <fadein>
                        <left>100</left>
                        <right>400</right>
                    </fadein>
                    <fadeout>
                        <left>100</left>
                        <right>600</right>
                    </fadeout>
                </transition> 
            </core>
        </page>
    </display>
</config>