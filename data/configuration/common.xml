<?xml version="1.0" encoding="UTF-8"?>
<!-- common.xml                      -->
<!-- Fichier de configuration commun -->
<root>
    <quality>
        <high>
            <interval>15</interval>
        </high>
    </quality>
    <transitions>
        <title>
            <duration>1000</duration>
            <easing>easeOutExpo</easing>
        </title>
        <slides>
            <next>
                <duration>1000</duration>
                <easing>easeOutExpo</easing>
            </next>
            <prev>
                <duration>1000</duration>
                <easing>easeOutExpo</easing>
            </prev>
        </slides>
        <core>
            <in>
                <duration>500</duration>
                <easing>easeOutExpo</easing>
            </in>
            <out>
                <duration>150</duration>
                <easing>easeOutExpo</easing>
            </out>
        </core>
    </transitions>
    <navigation>
        <content>
            <scroll>
                <sensibility>80</sensibility>
                <tolerance>25</tolerance>
                <factor>1.2</factor>
                <move>
                    <duration>120</duration>
                    <easing>swing</easing>
                </move>
                <callback>
                    <duration>50</duration>
                    <easing>easeInOutQuad</easing>
                </callback>
            </scroll>
        </content>
        <media>
            <switch>
                <multi>1.5</multi>
                <in>
                    <duration>500</duration>
                    <easing>easeOutCubic</easing>
                </in>
                <out>
                    <duration>500</duration>
                    <easing>easeInCubic</easing>
                </out>
            </switch>
            <zoom>
                <in>
                    <duration>800</duration>
                    <easing>easeOutExpo</easing>
                </in>
                <out>
                    <duration>800</duration>
                    <easing>easeOutExpo</easing>
                </out>
            </zoom>
            <view>
                <in>
                    <duration>500</duration>
                    <easing>easeOutExpo</easing>
                </in>
                <out>
                    <duration>1000</duration>
                    <easing>easeOutBounce</easing>
                </out>
            </view>
            <gallery>
                <in>
                    <duration>800</duration>
                    <easing>easeOutExpo</easing>
                </in>
                <out>
                    <duration>800</duration>
                    <easing>easeOutExpo</easing>
                </out>
            </gallery>
        </media>
    </navigation>
    <fields>
        <field id="no-media-alt">Aucun média affiché</field>
        <field id="no-media-error">Pour afficher un média, cliquez sur l'un des liens dans la partie gauche de l'écran</field>
    </fields>
</root>
